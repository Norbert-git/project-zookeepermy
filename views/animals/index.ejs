<%- include('../partials/header.ejs', {name: user.username}) %>
</div>
		<header class='animals'>	
			<h1>Animals</h1>
			<nav>
				<ul>
					<li>
						<a href="/animals/new">Add a new Animal to the Zoo</a>
					</li>
				</ul>
			</nav>
		
	<main>
		<h2>List of Animals</h2>
		<ul>
			<% animals.forEach(animal => { %>
				<li>
					<div style="background-image: url(<%= animal.img%>)"
						class="animal-background">

						<a href="/animals/<%= animal._id %>"><%= animal.name %></a>
					</div>
					
				</li>
			<% }) %>
		</ul>
	</main>
	</header>
</div>
