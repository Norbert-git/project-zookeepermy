<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title></title>
	</head>
	<body>
		<header>
			<%- include('../partials/header.ejs') %> 
			<h1>Animals</h1>
			<nav>
				<ul>
					<li>
						<a href="/">Home</a>
					</li>
					<li>
						<a href="/animals/new">Add a new Animal to the Zoo</a>
					</li>
				</ul>
			</nav>
		</header>
	</body>
	<main>
		<h2>List of Animals</h2>
		<ul>
			<% animals.forEach(animal => { %>
				<li>
					<a href="/animals/<%= animal._id %>"><%= animal.name %></a>
				</li>
			<% }) %>
		</ul>
	</main>
</html>